<div class="contact-form w-50 m-4">
  <div class="row border border-secondary p-3 pt-4">
    <div class="col-sm-6">
      <div class="form">
        <h4>Contact & Followup</h4>

        <label>Status</label>

        <ItemDropdown>
          <option selected>Answered</option>
          <option>Unanswered</option>
          <option>Inbound</option>
          <option>No call attempt made</option>
        </ItemDropdown>

        <label>Member</label>

          <ItemDropdown>
          <option selected>Choose...</option>
          <option>...</option>
        </ItemDropdown>

        <label>Date & Time Called</label>
        <div class="row">
          <div class="col-sm-5">
            <input class="form-control form-control-sm" type="text" placeholder="Date">
          </div>

          <div class="col-sm-5">
            <input class="form-control form-control-sm" type="text" placeholder="Time">
          </div>
        </div>

        <label>Next Action</label>

        <ItemDropdown>
          <option selected>Call back today</option>
          <option>Call tomorrow</option>
          <option>Call specific Date/Time</option>
          <option>Call back future date</option>
        </ItemDropdown>
      </div>
    </div>

    <div class="col-sm-6">
      <h4>Contact Notes</h4>
      <NoteForm>Write Notes</NoteForm>
      
      <BsButton class="mt-2 float-right" @type="primary">
        Submit
      </BsButton>
    </div>
  </div>
</div>